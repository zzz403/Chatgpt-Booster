{
  "name": "ChatGPT Booster",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Enhance your ChatGPT experience: auto-hide old messages, copy LaTeX easily, and more smart tools.",
  "default_locale": "en",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],

  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["contentScript.js", "libs/html2pdf.bundle.min.js"]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "icons/*.svg",
        "icons/*.png",
        "libs/*.js"
      ],
      "matches": [
        "https://chatgpt.com/*"
      ]
    }
  ]
}